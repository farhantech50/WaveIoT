<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>WaveIoT</title>
    <style >
      *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }
      body{
        background: rgb(219,226,226);
      }
      .row{
        background: white;
        border-radius: 30px;
        box-shadow: 12px 12px 22px grey;
      }
      img{
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px; 
      }
      .btn1{
        border:none;
        outline: none;
        height: 50px;
        width: 100%;
        background-color: black;
        color:white;
        border-radius: 4px;
        font-weight: bold;
      }
      .btn1:hover{
        background:white;
        border:2px solid;
        color:black;
        transition: .5s;
      }
      p{
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <section class="Form my-4 mx-5">
      <div class="container">
        <div class="row g-0">
          <div class="col-lg-5">
             <img src="./pic 1.jpg" class="img-fluid">
        </div>
          <div class="col-lg-7 px-5 pt-5"><h2 class="font-weight-bold py-3">Login Panel</h2>
            <form action="/" method="POST">
              <div class="form-row">
                <div class="col-lg-7">
                  <%if (val==1) { %>
                    <p style="color:red">Wrong Username or Password</p>
                  <% } %>
                  <input type="text" class="form-control my-4 p-3" placeholder="Username" id="username" name="username">
                </div>  
              </div>
              <div class="form-row">
                <div class="col-lg-7">
                  <input type="password" class="form-control my-4 p-3" placeholder="Password" id="pass" name="pass">
                </div>  
              </div>  
              <div class="form-row">
                <div class="col-lg-7">
                  <button type="submit" class="btn1 mt-3" id="btn">LOGIN</button>
                </div>  
              </div>              
            </form>
          </div>
      </div>
    </section>
    <div class="container">
    <footer class="py-3 my-4">
      <p class="text-center text-muted">Â© 2021  WaveShare by WaveIoT</p>
    </footer>
  </div>
    

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

